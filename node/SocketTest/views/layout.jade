    script(src="javascripts/socket.io.js")
    script(src="javascripts/jquery/dist/jquery.min.js")
    script.
      $(function() {
        var socket = io();
        $('form').submit(function() {
          socket.emit('chat message', $('#m').val());
          $('#m').val('');
          return false;
        });

        socket.on('chat message', function(msg) {
          $('#messages').append($('<li>').text(msg));
        });
      });
